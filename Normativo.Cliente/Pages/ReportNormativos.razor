@page "/reportnormativo"
@using Normativo.Cliente.Components

<div class="row">
	<div class="col-md-5">
		<NomeNormativo OnSelectChanged="SelectChanged" NomeNormativoList="ViewNomeNormativoList" />
	</div>
	<div class="col-md-5">
		<Search OnSearchChanged="SearchChanged" />
	</div>
	<div class="col-md-2">
		<Sort OnSortChanged="SortChanged" />
	</div>

</div>
<div class="row">
	<div class="col">
		<ReportLogNormativoTable viewLogsNormativos="ViewLogNormativoList" />
	</div>
</div>
<div class="row">
	<div class="col">
		<Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
	</div>
	<div class="col-md-1">
		<PageSizeDropDown SelectedPageSize="SetPageSize" />
	</div>
</div>